<h1>friends list goes here!</h1>


<ul>  
    <% friends.forEach(function(friend){ %>
        <li>
            <%= friend %>
        </li>
    <% }); %>
</ul>

<!--  ACTION is for the url api to hit to post to and METHOD is the method we would like to use (get, post, put, patch, delete)  -->
<form action="/addfriend" method="POST">
    <!--  the name is the key that we look this up by in the route -->
    <input type="text" name="newFriend" id="" placeholder="name">
    <button>I made a new friend!</button>
</form>